<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOGS" value="../logs"/>

    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%C{1.}): %msg%n%throwable
            </Pattern>
        </layout>
    </appender>

    <appender name="RollingFile"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/demo.log</file>
        <encoder
                class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d %p %C{1.} [%t] %m%n</Pattern>
        </encoder>

        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily and when the file reaches 10 MegaBytes -->
            <fileNamePattern>${LOGS}/archived/datlab_api-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>7</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

<!--    <appender name="Stash" class="ch.qos.logback.core.rolling.RollingFileAppender">-->
<!--        <file>${LOGS}/logstash.log</file>-->
<!--        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">-->
<!--            <fileNamePattern>${LOGS}/logstash.%d{yyyy-MM-dd}.log</fileNamePattern>-->
<!--            <maxHistory>7</maxHistory>-->
<!--        </rollingPolicy>-->
<!--        <encoder class="net.logstash.logback.encoder.LogstashEncoder">-->
<!--            <provider class="net.logstash.logback.composite.loggingevent.ArgumentsJsonProvider"/>-->
<!--            <customFields>{"app_identifier":"datlab_api"}</customFields>-->
<!--        </encoder>-->
<!--    </appender>-->

    <springProfile name="local">
        <!-- LOG everything at INFO level -->
        <root level="debug">
            <appender-ref ref="RollingFile"/>
            <appender-ref ref="Console"/>
            <!--        <appender-ref ref="Stash"/>-->
        </root>

        <!-- LOG "com.baeldung*" at TRACE level -->
        <logger name="com.baeldung" level="trace" additivity="false">
            <appender-ref ref="RollingFile"/>
            <appender-ref ref="Console"/>
        </logger>

    </springProfile>

    <springProfile name="dev">
        <!-- LOG everything at INFO level -->
        <root level="info">
            <appender-ref ref="RollingFile"/>
            <appender-ref ref="Console"/>
            <!--        <appender-ref ref="Stash"/>-->
        </root>

        <!-- LOG "com.baeldung*" at TRACE level -->
        <logger name="com.baeldung" level="trace" additivity="false">
            <appender-ref ref="RollingFile"/>
            <appender-ref ref="Console"/>
        </logger>

    </springProfile>


</configuration>